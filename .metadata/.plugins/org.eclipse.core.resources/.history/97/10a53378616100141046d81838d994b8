<?php
namespace App\Controller;

use App\Controller\AppController;
use Cake\ORM\TableRegistry;

class WhitelistController extends AppController {
    
    public $paginate = array(
        'limit' => 25,
    );    
    
    public function intialize() {
        parent::initialize();
        $this->loadComponent('Paginator');
    }    
    
    public function index(){
        $produit = TableRegistry::get('Produits'); 
        $produitsNetAff = $this->getWhiteNetaff();
        $this->set('produits', $produitsNetAff);
    }

    public function getWhiteNetaff() {
        $produit = TableRegistry::get('Produits');  
        $query = $produit->getWhiteNetaff(); 
        return $query; 
    }   
}


